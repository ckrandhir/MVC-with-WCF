        <table  >
            <tr>
                
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Picture</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    @{ byte[] photo = item.Picture;
                        string imageSrc = null;
                        if (photo != null)
                        {
                            MemoryStream ms = new MemoryStream();
                            ms.Write(photo, 78, photo.Length - 78); // strip out 78 byte OLE header (don't need to do this for normal images)
                            string imageBase64 = Convert.ToBase64String(ms.ToArray());
                            imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                        }
                    }

                    <td class="left">@item.CategoryID </td>
                    <td class="left">@item.CategoryName</td>                  
                    <td><img src="@imageSrc" alt="" border="0" /></td>
                </tr>
            }

        </table>
    </div>

    

</div>